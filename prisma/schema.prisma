datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model QuizResult {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  trainerName   String?
  grassPokemon  Json
  firePokemon   Json
  waterPokemon  Json
  teamSummary   String
  audioData     Bytes?   // Add this line
}
