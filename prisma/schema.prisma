generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model QuizResult {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  trainerName  String?
  grassPokemon Json
  firePokemon  Json
  waterPokemon Json
  teamSummary  String
  audioData    Bytes?
  audioStatus  String   @default("pending")
}
